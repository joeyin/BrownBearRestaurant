<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KFC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('../partials/header') %>
    <main>
        <div class="container">
            <h1 class="header">Orders</h1>
            <!-- Search Section -->
            <div class="search-section">
                <h1>Search for Your Order</h1>
                <form action="/orders/search" method="GET">
                    <input type="text" name="orderId" placeholder="Enter Order number" required>
                    <button type="submit" class="search-btn">Search</button>
                </form>
            </div>
            <!-- Orders List Table -->
            <div class="orders-list">
                <h2>History Orders</h2>
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Product Name</th>
                            <th>Status</th>
                            <th>Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i of orders) { %>
                            <tr>
                                <td><a href="/orders/fetch/<%= i._id %>">
                                        <%= i._id %>
                                    </a></td>
                                <td>
                                    <%= i.product.name %>
                                </td>
                                <td>
                                    <%= i.status %>
                                </td>
                                <td>
                                    <%= new Date(i.createdAt).toLocaleString('en-US', { weekday: 'short' ,
                                        year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                        minute: '2-digit' , hour12: true }) %>
                                </td> <!-- You can format date further if needed -->
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>

</html>