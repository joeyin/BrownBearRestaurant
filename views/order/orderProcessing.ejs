<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KFC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('../partials/header') %>
    <main>
        <div class="container p-5">
            <div class="orders-list">
                <div class="tab flex">
                    <button onclick="addOrderStatusQuery('Delivered')" class="<%= status === 'Delivered' ? 'active' : '' %>">Show Completed</button>
                    <button onclick="clearOrderStatus()" class="<%= status !== 'Delivered' ? 'active' : '' %>">Show All Orders</button>
                </div>

                <!-- <h1>Search for Specific Cutomer</h1> -->
                <form action="/admin" method="GET" class="filter-bar">
                    <div class="form-group flex gap-5">
                        <input type="text" name="customer_name" placeholder="Enter Customer Name" required>
                        <button type="submit" class="small primary text-white">Search</button>
                        <button onclick="clearCustomerFilter()" class="small default">Clear</button>
                    </div>
                </form>

                <table class="order-table">
                    <thead>
                        <tr>
                            <th>Order Number</th>
                            <th>Customer Name</th>
                            <th>Delivery Address</th>
                            <th>Order Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Driver Name</th>
                            <th>Update Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i of orders) { %>
                            <tr>
                                <td><a href="/orders/fetch/<%= i._id %>">
                                        <%= i._id %>
                                    </a></td>
                                <td>
                                    <%= i.customer_name %>
                                </td>
                                <td>
                                    <%= i.shippingAddress %>
                                </td>
                                <td>
                                    <%= new Date(i.createdAt).toLocaleString('en-US', { weekday: 'short' ,
                                        year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                        minute: '2-digit' , hour12: true }) %>
                                </td>
                                <td>$<%= i.totalAmount %>
                                </td>
                                <td>
                                    <%= i.status %>
                                </td>
                                <td><%= (i.status !== "Ready For Delivery") ? i?.driver?.username : "" %></td>
                                <td class="operate">
                                    <form action="/orders/update" method="POST">
                                        <input name="order_id" type="text" value="<%=i._id%>"
                                            style="display: none;">
                                        <select id="order_status" name="order_status" required>
                                            <option value="Ready For Delivery">Ready For Delivery</option>
                                            <option value="In Transit">In Transit</option>
                                            <option value="Delivered">Delivered</option>
                                        </select>
                                        <button type="submit" class="btn-submit">Update Status</button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
    </main>
    <%- include('../partials/footer') %>
    <script>
        function addOrderStatusQuery(newStatus) {
            const currentUrl = window.location.href;
            const url = new URL(currentUrl);
            url.searchParams.set('status', newStatus);
            window.location.href = url.toString();
        }
        function clearOrderStatus() {
            const currentUrl = window.location.href;
            const url = new URL(currentUrl);
            url.searchParams.delete('status');
            window.location.href = url.toString();
        }
        function clearCustomerFilter() {
            const currentUrl = window.location.href;
            const url = new URL(currentUrl);
            url.searchParams.delete('customer_name');
            window.location.href = url.toString();
        }
    </script>
</body>

</html>