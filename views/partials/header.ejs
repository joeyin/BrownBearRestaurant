<header>
    <div class="heder_left">
        <img src="/img/kfcLogo.svg" alt="KFC LOGO">
        <a title="Home" href="/">Home</a>
        <%if (username && userType === 'customer') {%>
        <a href="/orders">Orders</a>
        <%}%>
        <%if (username && userType === 'deliveryman') {%>
        <a title="Open Orders" href="/delivery">Open Orders</a>
        <%}%>
        <%if (username && userType === 'admin') {%>
        <a href="/admin">Admin Panel</a>
        <%}%>
    </div>
    <%if (username) {%>
        <a href="/users/logout"><div class="account-container" data-testid="account-container"><img loading="lazy"
                src="/img/Account_Icon.svg"
                alt="" class="account-icon"><span class="sign-in-text ">Log Out</span></div></a>
    <%}else{%>
        <a href="/signin"><div class="account-container" data-testid="account-container"><img loading="lazy"
            src="/img/Account_Icon.svg"
            alt="" class="account-icon"><span class="sign-in-text ">Sign In</span></div></a>
    <%}%>
</header>